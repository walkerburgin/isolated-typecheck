{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2022",
    "jsx": "react",
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  // "references": [
  //   { "path": "../bar-lib" }
  // ]
}
